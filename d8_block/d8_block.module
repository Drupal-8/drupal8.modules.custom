<?php

/**
 * @file
 * Provide structure for the administrative interface.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function d8_block_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.d8_block':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Drupal 8 - Block Example') . '</p>';
      $output .= '<p>' . t('Author: <a href="@url" target="_blank">@author</a>', array('@author' => 'Chhabi Pachabhaiya', '@url' => 'http://c.pachabhaiya.com'));
      return $output;
  }
}
